<div class="row my-2">
  <div class="col-12">
    <div class="card">
      <div class="row no-gutters">
        <div class="col-md-1">
          <%= render 'votes', link: link %>
        </div>
        <div class="col-md-11">
          <div class="card-body">
            <h3 class="card-title link-title"><%= link.title %></h3>
            <%= link_to link.destination, link.destination %>
            <p class="card-text"><%= link.description %></p>
          </div>
        </div>
      </div>
      <div class="card-footer text-muted">
        <%= link_to 'Edit', edit_link_path(link), class: 'btn btn-primary' %>
        <%= link_to 'Delete', link_path(link), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
